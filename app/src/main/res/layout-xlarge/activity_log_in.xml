<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sss"

    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="10dp"
    tools:context=".LogInActivity"
    android:paddingTop="30dp"
    android:orientation="horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
     <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">
         <TextView
             android:textColor="#FFFFFF"
             android:padding="10dp"
             android:textSize="30sp"
             android:text="xLarge"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
    <EditText
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:layout_marginTop="10dp"
        android:background="#DAD3D3"
        android:hint="enter your email"
        android:textSize="40sp"
        android:padding="10dp"
        android:id="@+id/signInEmailEditTextId"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


    <EditText
        android:imeOptions="actionDone"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:layout_marginTop="60dp"
        android:background="#DAD3D3"
        android:inputType="textPassword"
        android:id="@+id/signInPasswordEditTextId"
        android:hint="enter your password"
        android:textSize="40sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <CheckBox
        android:textSize="30sp"
        android:id="@+id/rememberCheckBoxId"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:buttonTint="#ffffff"
        android:text="Remember me ?"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/signInButtonId"
        android:text="Sign In"
        android:textSize="50sp"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <TextView
        android:text="Are you not registered? Sign Up"
        android:textColor="#FFFEFE"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:id="@+id/signUpTextViewId"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Forgot your password?"
        android:textColor="#FF5722"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/resetPasswordTextViewId"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
        </ScrollView>
    <ProgressBar
        android:foregroundGravity="center"
        android:id="@+id/logInProgressBarId"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
