<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AD80FB"
    tools:context=".HomeActivity">
    <TextView
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="Home Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/back"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FBFBFB"

                android:textAlignment="center"
                android:text="Total Deposited"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View
                android:background="#CFCFCF"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/totalDepositTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="0000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#31F338" />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/back"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FAF7F7"
                android:textAlignment="center"
                android:text="Total Expense"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View
                android:background="#CFCFCF"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/totalExpenseTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="0000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#E91E63" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/back"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FBFBFB"
                android:textAlignment="center"
                android:text="Total Meal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View
                android:background="#CFCFCF"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/totalMealTextViewId"
                android:textColor="#74C1FF"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:text="0000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/back"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FAF7F7"
                android:textAlignment="center"
                android:text="Meal Rate"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View
                android:background="#CFCFCF"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/mealRateTextViewId"
                android:textColor="#FFEB3B"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:text="0000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>