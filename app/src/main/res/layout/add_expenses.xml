<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:textColor="#000000"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:background="#DAD3D3"
            android:hint="Expense name"
            android:textSize="20sp"
            android:padding="10dp"
            android:id="@+id/expenseNameEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="#000000"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:background="#DAD3D3"
            android:hint="Type"
            android:textSize="20sp"
            android:padding="10dp"
            android:id="@+id/typeEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="#000000"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:background="#DAD3D3"
            android:hint="Cost"
            android:textSize="20sp"
            android:padding="10dp"
            android:id="@+id/costEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#000000"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="10dp"
            android:background="#DAD3D3"
            android:hint="Select marketer"
            android:textSize="20sp"
            android:padding="10dp"
            android:id="@+id/selectMarketerTextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Add"
            android:layout_marginTop="10dp"
            android:background="#DAD3D3"
            android:textSize="20sp"
            android:padding="10dp"
            android:id="@+id/saveExpenseButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:foregroundGravity="center"
        android:id="@+id/createExpenseProgressBarId"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
